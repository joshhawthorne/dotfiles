[core]
	editor = mate -w
	pager = =
	excludesfile = /Users/josh/.gitignore
[merge]
	tool = p4merge
	keepBackup = false
[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = false
[diff]
	tool = p4diff
[difftool "p4diff"]
  prompt = false
  cmd = p4merge "$LOCAL" "$BASE"
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
[user]
	name = Josh Hawthorne
	email = josh@clevyr.com
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
